<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>FinalProjectDAM</display-name>
  <servlet>
    <servlet-name>User</servlet-name>
    <servlet-class>david.servlet.User</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>App</servlet-name>
    <servlet-class>david.servlet.App</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>School</servlet-name>
    <servlet-class>david.servlet.School</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Course</servlet-name>
    <servlet-class>david.servlet.Course</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>User</servlet-name>
    <url-pattern>/user/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>App</servlet-name>
    <url-pattern>/app/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>School</servlet-name>
    <url-pattern>/school/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Course</servlet-name>
    <url-pattern>/course/*</url-pattern>
  </servlet-mapping>
  <resource-ref>
    <description>Pool de conexiones localhost</description>
    <res-ref-name>jdbc/seguimiento</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <session-config>
    <session-timeout>-1</session-timeout>
  </session-config>
</web-app>